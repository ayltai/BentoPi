{
    "name"            : "bentopi",
    "description"     : "BentoPi is a multi-purpose self-hosted dashboard for your Raspberry Pi",
    "version"         : "1.0.0",
    "author"          : {
        "name" : "Alan Tai"
    },
    "repository"      : {
        "type" : "git",
        "url"  : "https://github.com/ayltai/BentoPi"
    },
    "bugs"            : {
        "url" : "https://github.com/ayltai/BentoPi/issues"
    },
    "keywords"        : [
        "Raspberry",
        "Pi",
        "News",
        "TfL",
        "Weather"
    ],
    "license"         : "MIT",
    "type"            : "module",
    "scripts"         : {
        "clean"        : "pnpm dlx rimraf --glob **/node_modules/* pnpm-lock.yaml",
        "reset"        : "pnpm clean && pnpm i && pnpm audit -P",
        "lint"         : "eslint src",
        "pretest"      : "pnpm lint",
        "test"         : "vitest run --coverage",
        "build"        : "vite build && cp -r dist/* ../backend/web/",
        "build:remote" : "pnpm build && scp -r dist/* alan@192.168.68.177:/home/alan/Projects/BentoPi/backend/web/",
        "start"        : "vite dev --host 0.0.0.0",
        "serve"        : "vite serve"
    },
    "dependencies"    : {
        "@ant-design/icons"                 : "^6.1.0",
        "@fortawesome/fontawesome-svg-core" : "^7.1.0",
        "@fortawesome/free-solid-svg-icons" : "^7.1.0",
        "@fortawesome/react-fontawesome"    : "^3.1.1",
        "@reduxjs/toolkit"                  : "^2.11.2",
        "@sentry/react"                     : "^10.32.1",
        "antd"                              : "^6.1.3",
        "date-fns"                          : "^4.1.0",
        "i18next"                           : "^25.7.3",
        "react"                             : "^19.2.3",
        "react-dom"                         : "^19.2.3",
        "react-gauge-component"             : "^1.2.64",
        "react-i18next"                     : "^16.5.1",
        "react-redux"                       : "^9.2.0",
        "react-router"                      : "^7.11.0",
        "redux-persist"                     : "^6.0.0"
    },
    "devDependencies" : {
        "@eslint/eslintrc"           : "^3.3.3",
        "@eslint/js"                 : "^9.39.2",
        "@stylistic/eslint-plugin"   : "^5.6.1",
        "@testing-library/jest-dom"  : "^6.9.1",
        "@testing-library/react"     : "^16.3.1",
        "@types/node"                : "^25.0.3",
        "@types/react"               : "^19.2.7",
        "@types/react-dom"           : "^19.2.3",
        "@types/react-test-renderer" : "^19.1.0",
        "@typescript-eslint/parser"  : "^8.51.0",
        "@vitejs/plugin-react-swc"   : "^4.2.2",
        "@vitest/coverage-v8"        : "^4.0.16",
        "@vitest/ui"                 : "^4.0.16",
        "eslint"                     : "^9.39.2",
        "eslint-plugin-import"       : "^2.32.0",
        "eslint-plugin-prefer-arrow" : "^1.2.3",
        "eslint-plugin-react"        : "^7.37.5",
        "eslint-plugin-react-hooks"  : "^7.0.1",
        "eslint-plugin-unicorn"      : "^62.0.0",
        "globals"                    : "^17.0.0",
        "jsdom"                      : "^27.4.0",
        "prop-types"                 : "^15.8.1",
        "typescript"                 : "^5.9.3",
        "typescript-eslint"          : "^8.51.0",
        "vite"                       : "^7.3.0",
        "vitest"                     : "^4.0.16",
        "vitest-fetch-mock"          : "^0.4.5"
    },
    "engines"         : {
        "node" : ">=22",
        "pnpm" : ">=10"
    }
}
